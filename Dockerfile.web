FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY apps/web/package*.json ./apps/web/

# Install dependencies
RUN npm ci

# Copy web source
COPY apps/web/ ./apps/web/

# Start web app in development mode
WORKDIR /app/apps/web
EXPOSE 5173

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
