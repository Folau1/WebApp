FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./
COPY apps/admin/package*.json ./apps/admin/

# Install dependencies
RUN npm ci

# Copy admin source
COPY apps/admin/ ./apps/admin/

# Start admin app in development mode
WORKDIR /app/apps/admin
EXPOSE 5174

CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
